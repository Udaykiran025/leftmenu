<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="registerUserDialog" title="Register User" class="sapUiResponsivePadding">
        <content>
            <VBox>
                <Label text="User ID"/>
                <Input id="userIdInput1" placeholder="Enter User ID"/>

                <Label text="Name"/>
                <Input id="nameInput1" placeholder="Enter Name"/>

                <Label text="Username"/>
                <Input id="usernameInput1" placeholder="Enter Username"/>

                <Label text="Password"/>
                <Input id="passwordInput1" type="Password" placeholder="Enter Password"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Create" press="onCreatePress"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelPress"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
